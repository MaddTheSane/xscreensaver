# utils/Makefile.in --- xscreensaver, Copyright (c) 1997 Jamie Zawinski.
# the `../configure' script generates `utils/Makefile' from this file.

@SET_MAKE@
.SUFFIXES:
.SUFFIXES: .c .o

srcdir		= @srcdir@
VPATH		= @srcdir@

CC		= @CC@
CFLAGS		= @CFLAGS@
DEFS		= @DEFS@

SHELL		= /bin/sh

X_CFLAGS	= @X_CFLAGS@

INCLUDES	= -I$(srcdir) -I$(srcdir)/.. @INCLUDES@

SRCS		= colors.c fade.c grabscreen.c hsv.c overlay.c resources.c \
		  spline.c usleep.c visual.c xmu.c xroger.c yarandom.c
OBJS		= colors.o fade.o grabscreen.o hsv.o overlay.o resources.o \
		  spline.o usleep.o visual.o xmu.o xroger.o yarandom.o
HDRS		= colors.h fade.h grabscreen.h hsv.h resources.h spline.h \
		  usleep.h utils.h version.h visual.h xmu.h yarandom.h
EXTRAS		= README Makefile.in ad2c

TARFILES	= $(EXTRAS) $(SRCS) $(HDRS)


all: $(OBJS)

install:   install-program   install-man
uninstall: uninstall-program uninstall-man

install-strip:
	$(MAKE) INSTALL_PROGRAM='$(INSTALL_PROGRAM) -s' install

install-program:
install-man:
uninstall-program:
uninstall-man:

clean:
	-rm -f *.o a.out core

distclean: clean
	-rm -f Makefile *~ "#"*

depend:
	$(MAKEDEP) -I$(srcdir) -I. $(DEFS) $(SRCS)

TAGS: tags
tags:
	find $(srcdir) -name '*.[chly]' -print | xargs etags -a

echo_tarfiles:
	@echo $(TARFILES)


# How we build object files in this directory.
.c.o:
	$(CC) -c $(INCLUDES) $(DEFS) $(CFLAGS) $(X_CFLAGS) $<
