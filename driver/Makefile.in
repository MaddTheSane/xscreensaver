		  $(X_PRE_LIBS) -lXt -lX11 -lXext $(X_EXTRA_LIBS) \
		  $(PASSWD_LIBS)

CMD_LIBS	= $(X_LIBS) $(X_PRE_LIBS)      \
		  -lX11 -lXext $(X_EXTRA_LIBS) \
		  $(LIBS)

EXES		= xscreensaver xscreensaver-command

